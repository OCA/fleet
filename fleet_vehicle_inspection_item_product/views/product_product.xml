<odoo>

    <record model="ir.ui.view" id="product_product_form_view">
        <field name="name">product.product.form (in fleet_vehicle_inspection_item_product)</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="fleet_product.product_product_form_view" />
        <field name="arch" type="xml">
            <page name="fleet" position="inside">
                <group string="Vehicle Inspection Itens" name="vehicle_inspection_itens">
                    <field name="vehicle_inspection_item_ids" nolabel="1">
                        <tree>
                            <field name="name" />
                        </tree>
                    </field>
                </group>
            </page>
        </field>
    </record>

</odoo>
