<odoo>

    <record model="ir.ui.view" id="product_product_form_view">
        <field name="name">product.product.form (in fleet_vehicle_model_part)</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page
                    name="fleet"
                    string="Fleet"
                    attrs="{'invisible': [('fleet_ok', '=', False)]}"
                >
                </page>
            </xpath>
        </field>
    </record>

    <record id='fleet_product_action' model='ir.actions.act_window'>
        <field name="name">Products</field>
        <field name="res_model">product.product</field>
        <field name="search_view_id" ref="product.product_search_form_view" />
        <field name="context">{'default_fleet_ok': True}</field>
        <field name="domain">[('fleet_ok', '=', True)]</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new product
          </p><p>
            You can add multiple products for use with the fleet module.
          </p>
        </field>
    </record>

    <menuitem
        action="fleet_product_action"
        parent="fleet.fleet_vehicles"
        id="fleet_product_menu"
        groups="fleet.fleet_group_user"
        sequence="99"
    />

</odoo>
