<odoo>

    <record model="ir.ui.view" id="agreement_form_view">
        <field name="name">agreement.form (in fleet_vehicle_agreement)</field>
        <field name="model">agreement</field>
        <field name="inherit_id" ref="agreement.agreement_form" />
        <field name="arch" type="xml">
            <div class="oe_button_box" position="inside">
                <button
                    name="action_view_vehicle"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-car"
                >
                    <field name="vehicle_count" widget="statinfo" string="Vehicles" />
                </button>
            </div>
        </field>
    </record>

</odoo>
