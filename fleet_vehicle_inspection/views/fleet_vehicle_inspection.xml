<odoo>
    <record id="fleet_vehicle_inspection_form_view" model="ir.ui.view">
        <field
            name="name"
        >fleet.vehicle.inspection.form (in fleet_vehicle_inspection)</field>
        <field name="model">fleet.vehicle.inspection</field>
        <field name="arch" type="xml">
            <form string="Vehicle Inspection">
                <header>
                    <button
                        name="button_confirm"
                        type="object"
                        states="draft"
                        string="Confirm Inspection"
                        class="oe_highlight"
                        id="bid_confirm"
                        groups="fleet.fleet_group_manager"
                    />
                    <button
                        name="button_draft"
                        states="cancel"
                        string="Set to Draft"
                        type="object"
                        groups="fleet.fleet_group_manager"
                    />
                    <button
                        name="button_cancel"
                        states="draft,confirmed"
                        string="Cancel"
                        type="object"
                        groups="fleet.fleet_group_manager"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,confirmed,cancel"
                    />
                </header>
                <sheet>
                    <field name="result" invisible="1" />
                    <div
                        class="badge rounded-pill bg-danger float-end text-white"
                        attrs="{'invisible': [('result', 'not in', ['failure'])]}"
                    >Failure</div>
                    <div
                        class=" badge rounded-pill bg-success float-end text-white"
                        attrs="{'invisible': [('result', 'not in', ['success'])]}"
                    >Success</div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="vehicle_id" />
                            <field name="direction" />
                            <field name="odometer" />
                            <field name="odometer_unit" />
                        </group>
                        <group>
                            <field name="date_inspected" />
                            <field name="inspected_by" />
                            <field name="vendor_id" />
                            <field name="service_type_id" />
                            <field name="currency_id" invisible="1" />
                            <field name="company_id" invisible="1" />
                            <field name="service_id" invisible="1" />
                            <field
                                name="amount"
                                widget="monetary"
                                options="{'currency_field': 'currency_id'}"
                            />
                        </group>
                    </group>
                    <notebook>
                        <page string="Inspection Lines" name="inspection_lines">
                            <field
                                name="inspection_line_ids"
                                mode="tree,kanban"
                                context="{'default_inspection_id': active_id}"
                            >
                                <tree>
                                    <field name="sequence" widget="handle" />
                                    <field name="state" invisible="1" />
                                    <field name="inspection_item_id" />
                                    <field name="inspection_item_instruction" />
                                    <field name="result_description" />
                                    <field
                                        name="result"
                                        widget="badge"
                                        decoration-info="result == 'todo'"
                                        decoration-success="result == 'success'"
                                        decoration-danger="result == 'failure'"
                                    />
                                    <button
                                        name="action_item_success"
                                        states="draft"
                                        type="object"
                                        class="oe_highlight btn-success"
                                        icon="fa-check-circle"
                                        title="Success"
                                        groups="fleet.fleet_group_manager"
                                    />
                                    <button
                                        name="action_item_failure"
                                        states="draft"
                                        type="object"
                                        class="oe_highlight btn-danger"
                                        icon="fa-times-circle"
                                        title="Failure"
                                        groups="fleet.fleet_group_manager"
                                    />
                                </tree>
                                <kanban class="o_kanban_mobile">
                                    <field name="inspection_item_id" />
                                    <field name="inspection_item_instruction" />
                                    <field name="result_description" />
                                    <field name="result" />
                                    <field name="state" />
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div
                                                t-attf-class="oe_kanban_card oe_kanban_global_click"
                                            >
                                                <div class="o_dropdown_kanban dropdown">
                                                    <a
                                                        class="dropdown-toggle o-no-caret btn"
                                                        role="button"
                                                        data-toggle="dropdown"
                                                        data-display="static"
                                                        href="#"
                                                        aria-label="Dropdown menu"
                                                        title="Dropdown menu"
                                                    >
                                                        <span
                                                            class="fa fa-ellipsis-v"
                                                        />
                                                    </a>
                                                    <div
                                                        class="dropdown-menu"
                                                        role="menu"
                                                    >
                                                        <a
                                                            name="action_item_success"
                                                            type="object"
                                                            role="menuitem"
                                                            class="dropdown-item"
                                                            groups="fleet.fleet_group_manager"
                                                        >Approve</a>
                                                        <a
                                                            name="action_item_failure"
                                                            type="object"
                                                            role="menuitem"
                                                            class="dropdown-item"
                                                            groups="fleet.fleet_group_manager"
                                                        >Refuse</a>
                                                    </div>
                                                </div>
                                                <div class="o_kanban_record_top">
                                                    <div
                                                        class="o_kanban_record_headings"
                                                    >
                                                        <strong
                                                            class="o_kanban_record_title"
                                                        >
                                                            <span>
                                                                <t
                                                                    t-esc="record.inspection_item_id.value"
                                                                />
                                                            </span>
                                                        </strong>
                                                    </div>
                                                    <span class="float-right">
                                                        <field
                                                            name="result"
                                                            widget="badge"
                                                            decoration-info="result == 'todo'"
                                                            decoration-success="result == 'success'"
                                                            decoration-danger="result == 'failure'"
                                                        />
                                                    </span>
                                                </div>
                                                <div class="row">
                                                    <div class="col-12 text-muted">
                                                        <span>
                                                            <t
                                                                t-esc="record.inspection_item_instruction.value"
                                                            />
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page string="Notes" name="notes_information">
                            <field name="note" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="fleet_vehicle_inspection_search_view" model="ir.ui.view">
        <field
            name="name"
        >fleet.vehicle.inspection.search (in fleet_vehicle_inspection)</field>
        <field name="model">fleet.vehicle.inspection</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="vehicle_id" />
                <field name="inspected_by" />
                <separator />
                <filter
                    string="Direction IN"
                    name="direction"
                    domain="[('direction','=','in')]"
                />
                <filter
                    string="Direction OUT"
                    name="direction"
                    domain="[('direction','=','out')]"
                />
                <separator />
                <filter
                    string="Inspection Not Completed"
                    name="state"
                    domain="[('state','=','draft')]"
                />
                <filter
                    string="Inspection Completed"
                    name="result"
                    domain="[('state','=','completed')]"
                />
                <filter
                    string="Inspection Canceled"
                    name="result"
                    domain="[('result','=','cancel')]"
                />
                <separator />
                <filter
                    string="Successful Inspections"
                    name="result"
                    domain="[('result','=','success')]"
                />
                <filter
                    string="Failed Inspections"
                    name="result"
                    domain="[('result','=','failure')]"
                />
                <group expand="0" string="Group By">
                    <filter
                        string="Vehicle"
                        name="vehicle_id"
                        domain="[]"
                        context="{'group_by':'vehicle_id'}"
                    />
                    <filter
                        string="Direction"
                        name="direction"
                        domain="[]"
                        context="{'group_by':'direction'}"
                    />
                    <filter
                        string="Inspected Date"
                        name="date_inspected"
                        domain="[]"
                        context="{'group_by':'date_inspected'}"
                    />
                    <filter
                        string="Inspector"
                        name="inspected_by"
                        domain="[]"
                        context="{'group_by':'inspected_by'}"
                    />
                    <separator />
                    <filter
                        string="Inspection State"
                        name="state"
                        domain="[]"
                        context="{'group_by':'state'}"
                    />
                    <filter
                        string="Inspection Result"
                        name="result"
                        domain="[]"
                        context="{'group_by':'result'}"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="fleet_vehicle_inspection_tree_view" model="ir.ui.view">
        <field
            name="name"
        >fleet.vehicle.inspection.tree (in fleet_vehicle_inspection)</field>
        <field name="model">fleet.vehicle.inspection</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="date_inspected" />
                <field name="vehicle_id" />
                <field name="direction" />
                <field name="inspected_by" />
                <field
                    name="state"
                    widget="badge"
                    decoration-info="state == 'draft'"
                    decoration-success="state == 'confirmed'"
                    decoration-danger="state == 'cancel'"
                />
                <field
                    name="result"
                    widget="badge"
                    decoration-info="result == 'todo'"
                    decoration-success="result == 'success'"
                    decoration-danger="result == 'failure'"
                />
            </tree>
        </field>
    </record>
    <record id="fleet_vehicle_inspection_kanban_view" model="ir.ui.view">
        <field
            name="name"
        >fleet.vehicle.inspection.kanban (in fleet_vehicle_inspection)</field>
        <field name="model">fleet.vehicle.inspection</field>
        <field name="arch" type="xml">
            <kanban
                class="o_kanban_mobile"
                default_order="date_inspected desc"
                group_create="0"
                group_delete="0"
                quick_create="false"
            >
                <field name="name" />
                <field name="vehicle_id" />
                <field name="state" />
                <field name="result" />
                <field name="date_inspected" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="row mb4">
                                <div class="col-6 o_kanban_record_headings">
                                    <strong>
                                        <span>
                                            <field
                                                name="name"
                                                attrs="{'invisible': [('name', '=', False)]}"
                                            />
                                        </span>
                                    </strong>
                                </div>
                                <div class="col-6 text-right">
                                    <strong>
                                        <i
                                            class="fa fa-clock-o"
                                            aria-label="Date Inspected"
                                            role="img"
                                            title="Date"
                                        />
                                        <t t-esc="record.date_inspected.value" />
                                    </strong>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <span><field name="vehicle_id" /></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <span class="float-right">
                                        <field
                                            name="state"
                                            widget="badge"
                                            decoration-info="state == 'draft'"
                                            decoration-success="state == 'confirmed'"
                                            decoration-danger="state == 'cancel'"
                                        />
                                        <field
                                            name="result"
                                            widget="badge"
                                            decoration-info="result == 'todo'"
                                            decoration-success="result == 'success'"
                                            decoration-danger="result == 'failure'"
                                        />
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="fleet_vehicle_inspection_pivot_view" model="ir.ui.view">
        <field
            name="name"
        >fleet.vehicle.inspection.pivot (in fleet_vehicle_inspection)</field>
        <field name="model">fleet.vehicle.inspection</field>
        <field name="arch" type="xml">
            <pivot string="Vehicles Inspections">
                <field name="state" type="row" />
                <field name="vehicle_id" type="row" />
                <field name="result" type="col" />
            </pivot>
        </field>
    </record>
    <record id="fleet_vehicle_inspection_calendar_view" model="ir.ui.view">
        <field
            name="name"
        >fleet.vehicle.inspection.calendar (in fleet_vehicle_inspection)</field>
        <field name="model">fleet.vehicle.inspection</field>
        <field name="arch" type="xml">
            <calendar
                string="Fleet Vehicle Inspection"
                date_start="date_inspected"
                color="inspected_by"
            >
                <field name="vehicle_id" />
                <field name="inspected_by" />
                <field name="direction" />
                <field name="odometer" />
                <field name="odometer_unit" />
                <field name="state" widget="badge" />
                <field name="result" widget="badge" />
            </calendar>
        </field>
    </record>
    <record id="fleet_vehicle_inspection_graph_view" model="ir.ui.view">
        <field
            name="name"
        >fleet.vehicle.inspection.graph (in fleet_vehicle_inspection)</field>
        <field name="model">fleet.vehicle.inspection</field>
        <field name="arch" type="xml">
            <graph string="Vehicles Inspections">
                <field name="result" type="row" />
            </graph>
        </field>
    </record>
    <record id="fleet_vehicle_inspection_act_window" model="ir.actions.act_window">
        <field name="name">Vehicle Inspection</field>
        <field name="res_model">fleet.vehicle.inspection</field>
        <field name="view_mode">kanban,tree,calendar,pivot,graph,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <menuitem
        id="fleet_vehicle_inspection_menu"
        name="Vehicles Inspections"
        parent="fleet.fleet_vehicles"
        action="fleet_vehicle_inspection_act_window"
        sequence="16"
    />
</odoo>
