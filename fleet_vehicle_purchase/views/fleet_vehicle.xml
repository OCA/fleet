<odoo>

    <record model="ir.ui.view" id="fleet_vehicle_form_view">
        <field name="name">fleet.vehicle.form (in fleet_vehicle_purchase)</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    name="action_view_purchase_orders"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-dollar"
                    attrs="{'invisible': [('purchase_order_count', '=', 0)]}"
                    help="show the purchase orders for this vehicle"
                >
                    <field
                        name="purchase_order_count"
                        widget="statinfo"
                        string="Purcase Orders"
                    />
                </button>
            </div>
        </field>
    </record>


</odoo>
